{
    // General
    "editor.minimap.enabled": false, // hide minimap (bird's-eye views on right)
    "workbench.activityBar.visible": false, // hide the activity bar (left sidebar)
    "breadcrumbs.enabled": false, // hide breadcrumbs (near each tab)
    "editor.detectIndentation": false,
    "editor.tabCompletion": "on",
    "editor.tabSize": 2,
    "favorites.ownExplorer": true,
    "workbench.sideBar.location": "left",
    "files.associations": {
      ".env*": "properties"
    },
    "window.zoomLevel": 0,

    // Javascript: single quotes, and .js extension (i.e. from './bla/Bla.js')
    "typescript.preferences.quoteStyle": "single",
    "javascript.preferences.quoteStyle": "single",
    "typescript.preferences.importModuleSpecifierEnding": "js",
    "javascript.preferences.importModuleSpecifierEnding": "js",

    // Golang
    "[go]": {
      "editor.insertSpaces": false,
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
        "source.organizeImports": true
      }
    },
    "go.toolsGopath": "/Users/benimmanuel/go/",
    "go.gopath": "/Users/benimmanuel/go/",
    "go.goroot": "/usr/local/go",
    "go.docsTool": "gogetdoc",
    "go.useLanguageServer": true
  }